---
layout: base.njk
pagination:
  data: politiciansWithPositions
  size: 1
  alias: politician
permalink: "/politician/{{ politician.id }}/"
eleventyComputed:
  title: "{{ politician.name }} - Truth in Politics"
  description: "Analyze {{ politician.name }}'s political alignment between stated positions and actions"
---

<politician-profile data-politician-id="{{ politician.id }}" data-politician-data='{{ politician | jsonEscape }}'>
  <!-- Content will be dynamically generated by the web component -->
  <div class="loading-placeholder">
    <div class="container">
      <div class="loading-header">
        <h1>{{ politician.name }}</h1>
        <p>{{ politician.title }} from {{ politician.state }}</p>
      </div>
      <div class="loading-content">
        <p>Loading policy position analysis...</p>
      </div>
    </div>
  </div>
</politician-profile>

<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "Person",
  "name": "{{ politician.name }}",
  "jobTitle": "{{ politician.title }}",
  "affiliation": {
    "@type": "Organization",
    "name": "U.S. {{ politician.chamber }}",
    "sameAs": "https://www.congress.gov"
  },
  "address": {
    "@type": "PostalAddress",
    "addressRegion": "{{ politician.state }}"
  },
  "url": "{{ politician.website }}",
  "sameAs": [
    "{{ politician.website }}",
    "https://www.congress.gov"
  ]
}
</script>
